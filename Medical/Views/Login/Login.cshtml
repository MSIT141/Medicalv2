@model Medical.ViewModel.CLoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>登入</h1>

<h4>請填寫您的註冊信箱與密碼</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                帳號
                <label asp-for="txtAccount" class="control-label"></label>
                <input asp-for="txtAccount" class="form-control mb-2" value="" id="email"/>
                <span asp-validation-for="txtAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                密碼
                <label asp-for="txtPassword" class="control-label"></label>
                <input asp-for="txtPassword" class="form-control mb-2" id="pass"/>
                <span asp-validation-for="txtPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="請登入" class="btn btn-primary mb-2" />
                <a asp-action="Register" class="btn btn-primary mb-2">註冊</a>
            </div>
            <div class="form-group">
                <input type="button" value="AdminDemo" class="btn btn-primary mb-2" id="adDemo" />
                <input type="button" value="DoctorDemo" class="btn btn-primary mb-2" id="docDemo" />
                <input type="button" value="CustomerDemo" class="btn btn-primary mb-2" id="cusDemo" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
