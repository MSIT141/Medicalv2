@model Medical.ViewModel.CClinicDetailViewModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Admin_Layout.cshtml";
}

<div class="row">

<div class="col-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">新增門診</h3>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-6">

                    <div class="form-group">
                        <label>門診類別</label>
                        <select class="form-control select2" style="width: 100%;">
                        </select>
                    </div>

                    <div class="form-group">
                        <label>治療項目</label>
                        <select class="form-control select2" style="width: 100%;">
                        </select>
                    </div>

                </div>

                <div class="col-md-6">

                    <div class="form-group">
                        <label>醫生</label>
                        <select class="form-control select2" style="width: 100%;">
                        </select>
                    </div>

                    <div class="form-group">
                        <label>診間</label>
                        <select class="form-control select2" style="width: 100%;">
                        </select>
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Date:</label>
                        <div class="input-group date" id="reservationdate" data-target-input="nearest">
                            <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate" />
                            <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Date:</label>
                            <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate" />
                                <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class=" col-md-6">
                        <label>星期</label>
                        <div class="input-group">
                            <div class="btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-outline-primary ">
                                    <input type="checkbox" autocomplete="off"> 一
                                </label>
                            </div>
                            <div class="btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-outline-primary ">
                                    <input type="checkbox" autocomplete="off"> 二
                                </label>
                            </div>
                            <div class="btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-outline-primary ">
                                    <input type="checkbox" autocomplete="off"> 三
                                </label>
                            </div>
                            <div class="btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-outline-primary ">
                                    <input type="checkbox" autocomplete="off"> 四
                                </label>
                            </div>
                            <div class="btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-outline-primary ">
                                    <input type="checkbox" autocomplete="off"> 五
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class=" col-md-6">
                        <label>時段</label>
                        <div class="input-group">
                            <div class="btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-outline-primary ">
                                    <input type="checkbox" autocomplete="off"> 早上
                                </label>
                            </div>
                            <div class="btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-outline-primary ">
                                    <input type="checkbox" autocomplete="off"> 下午
                                </label>
                            </div>
                            <div class="btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-outline-primary ">
                                    <input type="checkbox" autocomplete="off"> 晚上
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>

</div>

